extends base.pug
block script
 script(src="../app.js")
block style
 style 
  include ../static/style.css
  include ../static/contact.css

  block content 
   div.container
    h2 Contact US
    form(action="/contact", method="post" class="myForm")
     input(type="text",name="name",class="myInput",placeholder="Enter your Name")
     input(type="email",name="email",class="myInput",placeholder="Enter your Email")
     input(type="phone",name="phone",class="myInput",placeholder="Enter your Phone No.")
     input(type="text",name="address",class="myInput",placeholder="Enter your Address")
     input(type="text",name="desc",class="myInput",placeholder="Enter class you want to enroll in") 
     button(class="btn" value="Submit")
